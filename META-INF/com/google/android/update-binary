#!/sbin/sh
# AnyKernel2 Backend
# osm0sis @ xda-developers

OUTFD=/proc/self/fd/$2;
ZIPFILE="$3";
DIR=`dirname "$ZIPFILE"`;

AUTOGEN=/tmp/anykernel/autogen.sh;
ANYKERNEL=/tmp/anykernel/anykernel.sh;

ui_print() {
  until [ ! "$1" ]; do
    echo -e "ui_print $1\nui_print" > $OUTFD;
    shift;
  done;
}
show_progress() { echo "progress $1 $2" > $OUTFD; }
file_getprop() { grep "^$2=" "$1" | cut -d= -f2; }
if [ ! "$(getprop 2>/dev/null)" ]; then
  getprop() {
    local propval="$(file_getprop /default.prop $1 2>/dev/null)";
    test "$propval" || local propval="$(file_getprop /system/build.prop $1 2>/dev/null)";
    test "$propval" && echo "$propval" || echo "";
  }
fi;
cleanup() { rm -rf /tmp/anykernel; }
debugging() {
  case $(basename "$ZIPFILE" .zip) in
    *-debugging)
      ui_print " ";
      ui_print "Creating debugging archive in zip directory...";
      $bb tar -czvf "$DIR/anykernel2-$(date +%Y-%m-%d_%H%M%S)-debug.tgz" /tmp/*;
    ;;
  esac;
}
abort() {
  ui_print "$*";
  debugging;
  if [ ! -f $ANYKERNEL -o "$(file_getprop $ANYKERNEL do.cleanuponabort 2>/dev/null)" == 1 ]; then
    cleanup;
  fi;
  umount /system;
  umount /vendor 2>/dev/null;
  umount /data 2>/dev/null;
  exit 1;
}

show_progress 1.34 4;
ui_print " ";
cleanup;
mkdir -p /tmp/anykernel/bin;
cd /tmp/anykernel;
unzip -o "$ZIPFILE";
if [ $? != 0 -o -z "$(ls /tmp/anykernel/tools)" ]; then
  abort "Unzip failed. Aborting...";
fi;
bb=/tmp/anykernel/tools/busybox;
chmod 755 $bb;
$bb chmod -R 755 /tmp/anykernel/tools /tmp/anykernel/bin;

if [ -f $AUTOGEN ]; then
  ui_print "Fetching properties from autogen.sh...";
  ui_print " ";
  ANYKERNEL=$AUTOGEN;
fi;

ui_print "  /  _  _ _  /_  _/_  ";
ui_print " /_,/_|/ / //_//_//_| ";
ui_print " ";

if [ -f /tmp/anykernel/banner ]; then
  while IFS='' read -r line || $bb [[ -n "$line" ]]; do
    ui_print "$line";
  done < /tmp/anykernel/banner;
  ui_print " ";
fi;

ui_print "$(file_getprop $ANYKERNEL kernel.string)";
ui_print "Version: $(file_getprop $ANYKERNEL kernel.version)";
ui_print " ";
ui_print "AnyKernel2 by osm0sis @ xda-developers";
ui_print " ";

ui_print "Mounting system, vendor and data partitions...";
umount /system 2>/dev/null;
umount /vendor 2>/dev/null;
mount -o ro -t auto /system;
mount -o ro -t auto /vendor 2>/dev/null;
mount /data 2>/dev/null;
test -f /system/system/build.prop && root=/system;

if [ "$(file_getprop $ANYKERNEL do.devicecheck)" == 1 ]; then
  ui_print "Checking device...";
  for i in 1 2 3 4 5; do
    testname="$(file_getprop $ANYKERNEL device.name$i)";
    if [ "$(getprop ro.product.device)" == "$testname" -o "$(getprop ro.build.product)" == "$testname" ]; then
      ui_print "Your $testname is supported.";
      match=1;
      ui_print "Passed!";
    fi;
  done;
  ui_print " ";
  if [ "$match" != 1 ]; then
    abort "Sorry, your device is not supported. Aborting...";
  fi;
fi;

ui_print "Setting up busybox binary...";
for i in $($bb --list); do
  $bb ln -s $bb /tmp/anykernel/bin/$i;
done;
if [ $? != 0 -o -z "$(ls /tmp/anykernel/bin)" ]; then
  abort "Recovery busybox setup failed. Aborting...";
fi;
ui_print "Running installation scripts...";
PATH="/tmp/anykernel/bin:$PATH" $bb ash /tmp/anykernel/anykernel.sh $2;
if [ $? != "0" ]; then
  abort;
fi;

if [ "$(file_getprop $ANYKERNEL do.modules)" == 1 ]; then
  ui_print " ";
  ui_print "Installing Kernel modules...";
  mount -o rw,remount -t auto /system;
  mount -o rw,remount -t auto /vendor 2>/dev/null;
  cd /tmp/anykernel/modules;
  for module in $(find . -name '*.ko'); do
    if [ ! -e /$module ]; then
      case $module in
        */vendor/*) mod=vendor;;
        *) mod=system;;
      esac;
    fi;
    $bb cp -rLf $module /$module;
    $bb chown 0:0 /$module;
    $bb chmod 644 /$module;
    if [ "$mod" ]; then
      chcon "u:object_r:${mod}_file:s0" /$module;
    fi;
  done;
  cd /tmp/anykernel;
  mount -o ro,remount -t auto /system;
  mount -o ro,remount -t auto /vendor 2>/dev/null;
fi;

debugging;

if [ "$(file_getprop $ANYKERNEL do.cleanup)" == 1 ]; then
  ui_print "Removing installation files...";
  cleanup;
fi;

umount /system;
umount /vendor 2>/dev/null;
umount /data 2>/dev/null;
ui_print " ";
ui_print "Enjoy your brand new Kernel!";
ui_print "Don't forget to K.I.S.S.";
ui_print " ";
